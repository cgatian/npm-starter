{
	"compilerOptions": {
		"baseUrl": "",
		"declaration": true,
		"stripInternal": true,
		"experimentalDecorators": true,
		"strictNullChecks": true,
		"noImplicitAny": true,
		"noEmit": true,
		"module": "es2015",
		"moduleResolution": "node",
		"typeRoots": [
			"node_modules/@types"
		],
		"paths": {
			"@angular/core": [
				"node_modules/@angular/core"
			],
			"@angular/common": [
				"node_modules/@angular/common"
			],
			"rxjs/*": [
				"node_modules/rxjs/*"
			]
		},
		"outDir": "dist",
		"sourceMap": true,
		"inlineSources": true,
		"target": "es5",
		"skipLibCheck": true,
		"lib": [
			"es2015",
			"dom"
		]
	},
	"files": [
		"./src/index.ts"
	],
	"angularCompilerOptions": {
		"strictMetadataEmit": true,
		"genDir": ".tmp"
	}
}