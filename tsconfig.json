{
	"compilerOptions": {
		"declaration": true,
		"stripInternal": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"strictNullChecks": true,
		"noImplicitAny": true,
		"module": "es2015",
		"moduleResolution": "node",		
		"typeRoots": [
			"node_modules/@types"
		],
		"outDir": "dist",
		"sourceMap": true,
		"inlineSources": true,
		"target": "es5",
		"skipLibCheck": true,
		"lib": [
			"es2015",
			"dom"
		]
	},
	"files": [
		"./src/index.ts"
	],
	"angularCompilerOptions": {
		"strictMetadataEmit": true,
		"genDir": ".tmp"
	}
}